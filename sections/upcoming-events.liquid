<style>
/* Upcoming Events Section Styles */
.upcoming-events {
  padding: var(--spacing-sections-mobile) 0;
}

@media screen and (min-width: 750px) {
  .upcoming-events {
    padding: var(--spacing-sections-desktop) 0;
  }
}

.events-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
  margin-top: 3rem;
}

@media screen and (min-width: 750px) {
  .events-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
  }
}

@media screen and (min-width: 990px) {
  .events-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.event-card {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 107, 53, 0.1);
  height: 100%;
  display: flex;
  flex-direction: column;
}

.event-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(102, 255, 10, 0.2);
  border-color: #66ff0a;
}

.event-card__image {
  position: relative;
  overflow: hidden;
  aspect-ratio: 16/9;
}

.event-card__image-element {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.event-card:hover .event-card__image-element {
  transform: scale(1.05);
}

.event-card__content {
  padding: 1.5rem;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.event-card__date {
  font-family: 'Orbitron', sans-serif;
  font-weight: 700;
  color: #66ff0a;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 0.5rem;
}

.event-card__title {
  font-family: 'Orbitron', sans-serif;
  font-weight: 700;
  color: #1A1A1A;
  font-size: 1.2rem;
  margin: 0 0 1rem 0;
  line-height: 1.3;
}

.event-card__description {
  font-family: 'Roboto Condensed', sans-serif;
  color: #666;
  font-size: 0.95rem;
  line-height: 1.5;
  margin-bottom: 1rem;
  flex-grow: 1;
}

.event-card__type {
  margin-bottom: 1.5rem;
}

.event-type-badge {
  display: inline-block;
  padding: 0.3rem 0.8rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.event-type-race {
  background: linear-gradient(135deg, #66ff0a 0%, #7fff1a 100%);
  color: white;
}

.event-type-practice {
  background: linear-gradient(135deg, #2C5530 0%, #4A7C59 100%);
  color: white;
}

.event-type-vintage {
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  color: white;
}

.event-type-youth {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #1A1A1A;
}

.event-type-special {
  background: linear-gradient(135deg, #9932CC 0%, #BA55D3 100%);
  color: white;
}

.event-card__button {
  align-self: flex-start;
  margin-top: auto;
}

.section-header {
  margin-bottom: 2rem;
}

.section-header__heading {
  font-family: 'Orbitron', sans-serif;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-bottom: 1rem;
  color: #1A1A1A;
}

.section-header__description {
  font-family: 'Roboto Condensed', sans-serif;
  font-size: 1.1rem;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.upcoming-events .text-center {
  margin-top: 3rem;
}

@media screen and (max-width: 749px) {
  .event-card__content {
    padding: 1rem;
  }
  
  .event-card__title {
    font-size: 1.1rem;
  }
  
  .event-card__description {
    font-size: 0.9rem;
  }
  
  .events-grid {
    gap: 1.5rem;
  }
}

.event-card {
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease forwards;
}

.event-card:nth-child(1) { animation-delay: 0.1s; }
.event-card:nth-child(2) { animation-delay: 0.2s; }
.event-card:nth-child(3) { animation-delay: 0.3s; }
.event-card:nth-child(4) { animation-delay: 0.4s; }
.event-card:nth-child(5) { animation-delay: 0.5s; }
.event-card:nth-child(6) { animation-delay: 0.6s; }

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<div class="upcoming-events section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <div class="section-header text-center">
        <h2 class="section-header__heading {{ section.settings.heading_size }}">
          {{ section.settings.title | escape }}
        </h2>
        {% if section.settings.description != blank %}
          <div class="section-header__description">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="events-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'event' %}
            <div class="event-card" {{ block.shopify_attributes }}>
              {% if block.settings.event_image != blank %}
                <div class="event-card__image">
                  {{ block.settings.event_image | image_url: width: 400 | image_tag: 
                    loading: 'lazy',
                    alt: block.settings.event_title,
                    class: 'event-card__image-element'
                  }}
                </div>
              {% endif %}
              
              <div class="event-card__content">
                <div class="event-card__date">
                  {{ block.settings.event_date }}
                </div>
                
                <h3 class="event-card__title">
                  {{ block.settings.event_title }}
                </h3>
                
                {% if block.settings.event_description != blank %}
                  <div class="event-card__description">
                    {{ block.settings.event_description }}
                  </div>
                {% endif %}
                
                {% if block.settings.event_type != blank %}
                  <div class="event-card__type">
                    <span class="event-type-badge event-type-{{ block.settings.event_type | handleize }}">
                      {{ block.settings.event_type }}
                    </span>
                  </div>
                {% endif %}
                
                {% if block.settings.event_link != blank %}
                  <a href="{{ block.settings.event_link }}" class="button button--primary event-card__button">
                    {{ block.settings.button_text | default: 'Learn More' }}
                  </a>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_view_all and section.settings.view_all_link != blank %}
      <div class="text-center">
        <a href="{{ section.settings.view_all_link }}" class="button button--secondary">
          {{ section.settings.view_all_text | default: 'View All Events' }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Upcoming Events",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Upcoming Events"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Large"
        },
        {
          "value": "h0",
          "label": "Extra Large"
        }
      ],
      "default": "h1",
      "label": "Heading Size"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Section Description"
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Button Text",
      "default": "View All Events"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Event",
      "settings": [
        {
          "type": "image_picker",
          "id": "event_image",
          "label": "Event Image"
        },
        {
          "type": "text",
          "id": "event_date",
          "label": "Event Date",
          "info": "Enter date in format: March 15-16, 2024"
        },
        {
          "type": "text",
          "id": "event_title",
          "label": "Event Title",
          "default": "Race Event"
        },
        {
          "type": "textarea",
          "id": "event_description",
          "label": "Event Description",
          "default": "Join us for an exciting day of racing and competition."
        },
        {
          "type": "select",
          "id": "event_type",
          "label": "Event Type",
          "options": [
            {
              "value": "Race",
              "label": "Race"
            },
            {
              "value": "Practice",
              "label": "Practice"
            },
            {
              "value": "Vintage",
              "label": "Vintage"
            },
            {
              "value": "Youth",
              "label": "Youth"
            },
            {
              "value": "Special",
              "label": "Special Event"
            }
          ],
          "default": "Race"
        },
        {
          "type": "url",
          "id": "event_link",
          "label": "Event Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Upcoming Events",
      "blocks": [
        {
          "type": "event"
        },
        {
          "type": "event"
        },
        {
          "type": "event"
        }
      ]
    }
  ]
}
{% endschema %} 